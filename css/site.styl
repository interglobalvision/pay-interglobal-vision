@import 'kouto-swiss'
@import 'helpers'

// ******************************************************

// RESETS

meyer-reset()
box-sizing-reset()
normalize()

// ******************************************************

// GRID

@import 'grid'

// ******************************************************

// TYPOGRAPHY

@import 'type'

// ******************************************************

// VARIABLES

$color-black = rgb(0, 0, 0)
$color-white = rgb(255, 255, 255)
$color-grey = rgb(200, 200, 200)
$color-grey-dark = rgb(169, 169, 169)
$border-radius = 5px
$border-width = 2px
$border-style = solid

// ******************************************************

// BASIC
 
html
  background-color: $color-grey
  color: $color-grey-dark
  
.container 
  background-color: $color-white
  min-height: 100vh

img
  max-width: 100%
  height: auto

#logo
  width: 100px

.mobile-only
  display: initial !important 
  
.desktop-only
  display: none !important

input
  border-radius: $border-radius
  border-style: $border-style
  border-width: $border-width
  border-color: $color-grey

textarea
  border-radius: $border-radius
  border-style: $border-style
  border-width: $border-width
  background-color: $color-white
  border-color: $color-grey

input[type="submit"]
  background-color: $color-white


// ******************************************************

// RESPONSE 

#payment-response 
  padding: 10px
  visibility: hidden
  &.show 
    visibility: visible

.authorized 
  background-color: lightgreen 
  
.declined 
  background-color: lightpink
  
// ******************************************************

// MEDIA QUERIES

$gutter = 14px 

$margin-micro = ($gutter / 3)
$margin-tiny = ($gutter / 2)
$margin-small = ($gutter)
$margin-basic = ($gutter * 2)
$margin-mid = ($gutter * 3.5)
$margin-large = ($gutter * 5)
    
$font-size-basic = 18px
$font-size-large = 21px
$font-size-small = 13px

grid(96%, $gutter, s)

space-maker($margin-micro, $margin-tiny, $margin-small, $margin-basic, $margin-mid, $margin-large)

font-sizes($font-size-basic, false, $font-size-large, false, $font-size-small)

@import 'responsive/mobile'

@media screen and (min-width: 720px)

  $gutter = 21px
  
  $margin-micro = ($gutter / 3)
  $margin-tiny = ($gutter / 2)
  $margin-small = ($gutter)
  $margin-basic = ($gutter * 2)
  $margin-mid = ($gutter * 3.5)
  $margin-large = ($gutter * 5)
  
  space-maker($margin-micro, $margin-tiny, $margin-small, $margin-basic, $margin-mid, $margin-large)
  
  grid(700px, $gutter, m)
  
  .mobile-only
    display: none !important
  
  @import 'responsive/tablet'

@media screen and (min-width: 1024px)

  $gutter = 24px

  $margin-micro = ($gutter / 3)
  $margin-tiny = ($gutter / 2)
  $margin-small = ($gutter)
  $margin-basic = ($gutter * 2)
  $margin-mid = ($gutter * 3.5)
  $margin-large = ($gutter * 5)

  grid(500px, $gutter, l)
  
  space-maker($margin-micro, $margin-tiny, $margin-small, $margin-basic, $margin-mid, $margin-large)
  
  
  .desktop-only
    display: initial !important

  @import 'responsive/desktop'

