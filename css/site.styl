@import 'kouto-swiss'
@import 'helpers'

// ******************************************************

// RESETS

meyer-reset()
box-sizing-reset()
normalize()

// ******************************************************

// GRID

@import 'grid'

// ******************************************************

// TYPOGRAPHY

@import 'type'

// ******************************************************

// VARIABLES

$color-black = rgb(0, 0, 0)
$color-black-soft = rgb(25, 25, 25)
$color-white = rgb(255, 255, 255)
$color-grey = rgb(240, 240, 240)
$color-grey-mid = rgb(186, 188, 190)
$color-grey-dark = rgb(138, 141, 143)
$color-pink = rgb(255, 160, 160)
$color-green = rgb(144, 229, 202)
$color-outline = rgb(158,202,237)

$border-radius = 5px
$border-width = 1px
$border-style = solid

// ******************************************************

// BASIC
 
html
  background-color: $color-grey
  color: $color-grey-dark
  
.container 
  background-color: $color-white

img
  max-width: 100%
  height: auto

#logo
  width: 50px

.mobile-only
  display: initial !important 
  
.desktop-only
  display: none !important

h1
  margin: 0
  margin-top: 0

// ******************************************************

// FORM 

input, textarea, select
  background-color: $color-white
  border: $border-width $border-style $color-grey-mid
  border-radius: $border-radius
  color: $color-black-soft
  appearance: none
  &:focus 
    outline: none
    box-shadow: 0 0 10px $color-outline
  
input.submit 
  background-color: $color-grey-dark
  color: $color-white
  &:hover 
    background-color: $color-grey-mid
    
label 
  color: $color-grey-dark
  font-weight: 500

// ******************************************************

// RESPONSE 

#payment-response 
  padding: 10px
  visibility: hidden
  color: $color-white
  &.show 
    visibility: visible

.authorized 
  background-color: $color-green
  
.declined 
  background-color: $color-pink
  
// ******************************************************

// MEDIA QUERIES

$gutter = 14px 

$margin-micro = ($gutter / 3)
$margin-tiny = ($gutter / 2)
$margin-small = ($gutter)
$margin-basic = ($gutter * 2)
$margin-mid = ($gutter * 3.5)
$margin-large = ($gutter * 5)
    
$font-size-basic = 18px
$font-size-large = 21px
$font-size-small = 13px

grid(96%, $gutter, s)

space-maker($margin-micro, $margin-tiny, $margin-small, $margin-basic, $margin-mid, $margin-large)

font-sizes($font-size-basic, false, $font-size-large, false, $font-size-small)

@import 'responsive/mobile'

@media screen and (min-width: 720px)

  $gutter = 21px
  
  $margin-micro = ($gutter / 3)
  $margin-tiny = ($gutter / 2)
  $margin-small = ($gutter)
  $margin-basic = ($gutter * 2)
  $margin-mid = ($gutter * 3.5)
  $margin-large = ($gutter * 5)
  
  grid(700px, $gutter, m)
  
  space-maker($margin-micro, $margin-tiny, $margin-small, $margin-basic, $margin-mid, $margin-large)
  
  .mobile-only
    display: none !important
  
  @import 'responsive/tablet'

@media screen and (min-width: 1024px)

  $gutter = 24px

  $margin-micro = ($gutter / 3)
  $margin-tiny = ($gutter / 2)
  $margin-small = ($gutter)
  $margin-basic = ($gutter * 2)
  $margin-mid = ($gutter * 3.5)
  $margin-large = ($gutter * 5)

  grid(700px, $gutter, l)
  
  space-maker($margin-micro, $margin-tiny, $margin-small, $margin-basic, $margin-mid, $margin-large)
  
  .desktop-only
    display: initial !important

  @import 'responsive/desktop'

